<form addfieldprefix="Akeeba\Component\DataCompliance\Administrator\Field">
    <fields name="filter">
        <field
                name="search"
                type="text"
                inputmode="search"
                label="JSEARCH_FILTER"
                hint="JSEARCH_FILTER"
        />

        <field
                name="enabled"
                type="status"
                optionsFilter="*,0,1"
                label="JENABLED"
                description="JFIELD_ENABLED_DESC"
                onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="JGLOBAL_SORT_BY"
                statuses="*,0,1"
                onchange="this.form.submit();"
                default="i.id ASC"
                validate="options"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.created ASC">COM_DATACOMPLIANCE_COMMON_FILTERS_LBL_CREATED_ASC</option>
            <option value="a.created DESC">COM_DATACOMPLIANCE_COMMON_FILTERS_LBL_CREATED_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                label="JGLOBAL_LIST_LIMIT"
                default="25"
                onchange="this.form.submit();"
        />
    </fields>
</form>