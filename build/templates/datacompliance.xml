<extension type="component" version="2.5.0" method="upgrade">
	<name>COM_DATACOMPLIANCE</name>
	<creationDate>##DATE##</creationDate>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@akeeba.com</authorEmail>
	<authorUrl>https://www.akeeba.com</authorUrl>
	<copyright>Copyright (c)2018-2021 Nicholas K. Dionysopoulos</copyright>
	<license>This component in released under the GNU/GPL v3 or later license</license>
	<version>##VERSION##</version>
	<description>A GDRP compliance tool for Joomla! sites</description>

	<!-- Public front end files -->
	<files folder="frontend">
		<folder>Controller</folder>
		<folder>Dispatcher</folder>
		<folder>Model</folder>
		<folder>tmpl</folder>
		<folder>View</folder>
        <filename>datacompliance.php</filename>
	</files>

	<!-- Front end translation files -->
	<languages folder="language/frontend">
		<language tag="en-GB">en-GB/en-GB.com_datacompliance.ini</language>
	</languages>

	<!-- Media files -->
	<media destination="com_datacompliance" folder="media">
		<folder>css</folder>
		<folder>js</folder>
		<folder>icons</folder>
	</media>

	<!-- Administrator back-end section -->
	<administration>
		<!-- Administration menu -->
		<menu>COM_DATACOMPLIANCE</menu>

		<!-- Back-end files -->
        <files folder="backend">
            <folder>assets</folder>
            <folder>Controller</folder>
            <folder>Dispatcher</folder>
            <folder>fields</folder>
            <folder>Helper</folder>
            <folder>Model</folder>
            <folder>sql</folder>
            <folder>tmpl</folder>
            <folder>Toolbar</folder>
            <folder>vendor</folder>
            <folder>View</folder>

            <filename>access.xml</filename>
            <filename>datacompliance.php</filename>
            <filename>config.xml</filename>
            <filename>fof.xml</filename>
            <filename>version.php</filename>
        </files>

		<!-- Back-end translation files -->
		<languages folder="language/backend">
			<language tag="en-GB">en-GB/en-GB.com_datacompliance.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_datacompliance.sys.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_datacompliance.menu.ini</language>
		</languages>

	</administration>

	<scriptfile>script.com_datacompliance.php</scriptfile>
</extension>
